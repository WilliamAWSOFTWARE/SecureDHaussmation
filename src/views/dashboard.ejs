    <script>
        //Cargar tabla de personas
        async function cargarpersonas() {
            try {
                const response = await fetch('/personas_t'); // Llama al backend
                const personas = await response.json();
                //console.log(personas);

                const tableBody = document.getElementById('personasTableBody');
                tableBody.innerHTML = '';

                personas.forEach(persona => {
                    const row = `
                <tr>
                    <td>${persona.id}</td>
                    <td>${persona.codigo_familia}</td>
                    <td>${persona.nombres}</td>
                    <td>${persona.apellidos || ''}</td>
                    <td>${persona.telefono || ''}</td>
                    <td>${persona.estado || ''}</td>
                    <td>
                        <button class="btn btn-warning btn-sm editar-btn" onclick="llenarupdate('${persona.codigo_familia}','${persona.nombres}','${persona.apellidos}','${persona.telefono}','${persona.email}', '${persona.id}')" data-bs-toggle="modal" data-bs-target="#modalEditarpersona"><i class="bi bi-pencil-square"></i></button>
                        <button class="btn btn-danger btn-sm eliminar-btn" data-id="" onclick="eliminarpersona('${persona.id}')"><i class="bi bi-trash3"></i></button>
                    </td>
                </tr>
            `;
                    tableBody.innerHTML += row;
                });

            } catch (error) {
                console.error('Error al cargar las personas:', error);
            }
        }


        // Cargar las personas cuando la página se cargue
        document.addEventListener('DOMContentLoaded', cargarpersonas);
        $(document).ready(function () {
            const nombre = localStorage.getItem('nombre');
            document.getElementById('usuario').innerHTML = nombre;
            // El código dentro de esta función se ejecutará cuando el DOM esté completamente cargado
            //console.log("Documento listo");
            // Aquí puedes poner todo tu código de inicialización
        });

    </script>



    <script>
        let isProcessing = false; // Variable para verificar si ya se está procesando un QR

        function handleQRScan(qrCodeMessage) {
            // Si ya estamos procesando un QR, no hacer nada
            if (isProcessing) return;

            // Marcar que estamos procesando un QR
            isProcessing = true;

            const qrData = JSON.parse(qrCodeMessage);
            console.log("QR Detectado:", qrData);

            // Verifica si los datos del QR son válidos
            if (qrData.id_usuario && qrData.codigo_familia && qrData.hora_generacion && qrData.hora_vencimiento) {
                // Enviar los datos al backend
                fetch("http://localhost:3000/validarqr", {
                    method: "POST",
                    headers: {
                        "Content-Type": "application/json",
                    },
                    body: JSON.stringify(qrData),
                })
                    .then(response => response.json())
                    .then(data => {
                        if (data.message === "Visitante registrado exitosamente.") {
                            // SweetAlert para mostrar mensaje de éxito
                            Swal.fire({
                                icon: 'success',
                                title: 'QR válido',
                                text: 'Visitante registrado exitosamente.',
                                confirmButtonText: 'OK'
                            });
                        } else {
                            // SweetAlert para mostrar mensaje de error
                            Swal.fire({
                                icon: 'error',
                                title: 'QR no válido o expirado',
                                text: 'El código QR no es válido o ha expirado.',
                                confirmButtonText: 'OK'
                            });
                        }
                    })
                    .catch(error => {
                        console.error("Error al enviar los datos:", error);
                        // SweetAlert para mostrar un mensaje de error en caso de problemas al registrar
                        Swal.fire({
                            icon: 'error',
                            title: 'Error',
                            text: 'Error al registrar el visitante.',
                            confirmButtonText: 'OK'
                        });
                    });
            } else {
                // SweetAlert para mostrar que los datos del QR son incorrectos
                Swal.fire({
                    icon: 'warning',
                    title: 'Datos del QR incorrectos',
                    text: 'Los datos del QR no son válidos.',
                    confirmButtonText: 'OK'
                });
            }

            // Esperar 10 segundos antes de permitir un nuevo escaneo
            setTimeout(() => {
                isProcessing = false;
            }, 10000); // 10000 ms = 10 segundos
        }

        // Configurar la lectura del QR usando html5-qrcode
        const qrCodeScanner = new Html5QrcodeScanner("qr-reader", { fps: 10, qrbox: 250 });

        // Iniciar el escaneo de QR
        qrCodeScanner.render(handleQRScan);

        // Detener el escaneo al presionar el botón
        document.getElementById("stopScanBtn").addEventListener("click", () => {
            qrCodeScanner.clear();
            document.getElementById("status").textContent = "Escaneo detenido.";
        });
    </script>
